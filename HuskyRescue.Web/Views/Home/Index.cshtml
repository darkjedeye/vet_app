@using HuskyRescue.Core.ViewModel.Google
@{
	ViewBag.Title = "Texas Husky Rescue - Home";
	var calendarEvents = TempData["reminders"] as List<CalendarEvent>;
	var serverprefix = TempData["serverprefix"] as string;
	var serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
	var jServerPrefix = serializer.Serialize(serverprefix);
}

@Styles.Render("~/bundles/home/index/css")

@section JavaScript
{
	@Scripts.Render("~/bundles/home/index/js")
}

@Html.Hidden("serverPrefix", @serverprefix, new { id = "serverPrefix" })

<div class="row">
	<div class="large-12 columns">
		<div class='camera_wrap' id="camera">
			<div data-src="/Content/images/Controllers/Home/Index/slider10.png" data-link="/Golf" data-portrait="true" data-time="5000" data-transperiod="400">
			</div>
			<div data-src="/Content/images/Controllers/Home/Index/slider6.jpg" data-link="/Info/AboutUs" data-portrait="true" data-time="5000" data-transperiod="400">
			</div>
			<div data-src="/Content/images/Controllers/Home/Index/slider8.jpg" data-link="/Info/Fostering" data-portrait="true" data-time="5000" data-transperiod="400">
			</div>
			<div data-src="/Content/images/Controllers/Home/Index/slider800.jpg" data-link="/Adoption/Huskies" data-portrait="true" data-time="5000" data-transperiod="400">
			</div>
			<div data-src="/Content/images/Controllers/Home/Index/slider7.jpg" data-link="" data-portrait="true" data-time="5000" data-transperiod="400">
			</div>
		</div>
	</div>
</div>
<div class="row box">
	<div class="large-4 columns">
		<section class="highlight">
			<div id="upcomingevents">
				<h3 class="subheader">Upcoming Events </h3>
				<div>
					<ul>
						@if (calendarEvents != null)
						{
							foreach (var e in calendarEvents)
							{
								<li>
									@Html.Raw(e.ToString())
								</li>
							}
						}
					</ul>
				</div>
				<div>
					@Html.ActionLink("See All Events", "Calendar", new { @controller = "Events" }, new { @class = "tiny button round secondary text-center" })
				</div>
			</div>
		</section>
	</div>
	<div class="large-4 columns">
		<section class="highlight">
			<div class="block">
				<h3 class="subheader">Helping TXHR</h3>
				<ul id="" style="margin-bottom: 0.5em">
					<li>@Html.ActionLink("Volunteer", "Volunteer", "Info") at events, transport, screen adoption applicants, fundraising, newsletter, and more</li>
					<li>@Html.ActionLink("Foster", "Fostering", "Info") and help save a husky's life. Fostering is hard mentally and physically but the reward of seeing a husky
						regain trust in people and eventually go to a forever home is priceless</li>
					<li>@Html.ActionLink("Donate", "Donate", "Info") any amount of money - 100% of donations directly help the huskies</li>
				</ul>
			</div>
		</section>
	</div>
	<div class="large-4 columns">
		<section class="highlight">
			<div class="fostersneeded">
				<h3 class="subheader">Fosters Needed</h3>
				<div id="divFostersNeeded">
					<div class="display-label" style="height: 155px;">
						@*@Html.ActionLink("Read more about fostering for us", "Fostering", "Info")*@
					</div>
				</div>
			</div>
		</section>
	</div>
</div>
