@model HuskyRescue.Core.ViewModel.ImageUploadViewModel
@{
	ViewBag.Title = "Upload";
}
<script src="@Url.Content("~/Scripts/ImageUpload.js")" type="text/javascript"></script>
@using (Html.BeginForm("Upload", "Image", FormMethod.Post, new { @id = "formUploadImage", @enctype="multipart/form-data" }))
{
	<fieldset>
		<legend>Upload</legend>
		<div class="main-container">
			<div class="container1">
				@Html.ValidationSummary(true)
				<div class="editor-label">
					@Html.LabelFor(model => model.Description)
				</div>
				<div class="editor-field">
					@Html.EditorFor(model => model.Description)
				</div>
				<div class="editor-label">
					@Html.LabelFor(model => model.FolderList)
				</div>
				<div class="editor-field">
					@Html.DropDownListFor(model => model.SelectedFolder, Model.FolderList)
					@Html.ValidationMessageFor(model => model.FolderList)
				</div>
				<div class="editor-label" id="NewFolderLabel">
					@Html.LabelFor(model => model.NewFolder)
				</div>
				<div class="editor-field" id="NewFolderField">
					@Html.EditorFor(model => model.NewFolder) 
					@Html.ValidationMessageFor(model => model.NewFolder)
				</div>
				<div class="editor-label">
					@Html.LabelFor(model => model.Images)
				</div>
				<div class="editor-field">
					<input type="file" name="Images" />
					<input type="file" name="Images" />
					<input type="file" name="Images" />
				</div>
				<p>
					<input type="submit" value="Create" />
				</p>
			</div>
		</div>
	</fieldset>
}